                    div(class="inputform_brand__BrandNameHeader inputheader")
                        p Brand Name
                    div(class="inputform_brand__BrandCategoryHeader inputheader")
                        p Category
                    input(type="text" name="Brandname" Placeholder = "Please enter the brand name..." id="inputform_brand__BrandName")
                    select(name="Category" id="inputform_brand__BrandCategory")
                        option(value="Eggs") Eggs
                        option(value="Eggs") Porks
                        option(value="Eggs") Chicken/ Broilers
                    input(type="file" accept="image/*" name="Image" id="inputform_brand__BrandImage")
                    div(class="inputform_brand__BrandAccreditationHeader inputheader")
                        p Accreditation
                    div(class="inputform_brand__BrandRatingHeader inputheader")
                        p Rating
                    input(type="text" name="Accreditation" Placeholder = "Please enter the accreditation..." class="inputform_brand__BrandAccreditation")
                    input(type="text" name="Rating" Placeholder = "Please enter the rating..." class="inputform_brand__BrandRating")
                    br
                    input(type="button" class="inputform_brand__BrandSubmit" value="Submit")
                    input(type="button" class="inputform_brand__BrandReset" value="Reset")
