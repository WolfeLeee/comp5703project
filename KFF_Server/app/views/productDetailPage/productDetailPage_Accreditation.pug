doctype html

html
head
    title Main Page
    link(href="css/shared.css" rel="stylesheet" type="text/css")
    link(href="css/productDetailPage/productDetailPage_shared.css" rel="stylesheet" type="text/css")
    link(href="css/productDetailPage/productDetailPage_Accreditation.css" rel="stylesheet" type="text/css")
    script(src="http://code.jquery.com/jquery-1.9.1.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
    script(src="js/productDetailPage/productDetailPage_Accreditation.js" type="text/javascript")
    script.
        window.jQuery || document.write('script(src="js/jquery.js")')
body
    div(class="pageheader")
        div(class="pageheader_title")
            a(href="/feature" class="pageheader_title__anchor") KINDER FOOD FINDER
            div(class="ertical-align")
        div(class="pageheader_navigationbar")
            ul(class="pageheader_navigationbar__items")
                li(class="pageheader_navigationbar__item")
                    input(id="pageheader_navigationbar__searchbox" type="text" name="SearchBrandName" Placeholder="Search a brand name...")
                    div(class="vertical-align")
                li(class="pageheader_navigationbar__item")
                    a(href="/feature") ABOUT THE SERVER
                li(class="pageheader_navigationbar__item")
                    a(href="/feature") GUIDELINE
                li(class="pageheader_navigationbar__item")
                    a(href="/logout") LOGOUT
    div(class="pagebody")
        div(class="pagebody_navigationbar")
            p CONTROL PANEL
            div(class="pagebody_navigationbar__header")
                a(href="/importPage") Import CSV file
            div(class="pagebody_navigationbar__header")
                a(href="/feature") Report
            div(class="pagebody_navigationbar__header")
                a(href="/feature") Import/ Insert Data
            div(class="pagebody_navigationbar__header")
                a(href="/dbmanagement") Update/ Delete Data
        div(class="pagebody_mainbody")
            div(class="brand")
                div(class="pagebody_mainbody__sectionheader__brand")
                    p #{brandname}
                div(class="pagebody_controlpanel")
                    - var id = brandid
                    a.pagebody_controlpanel_item(href="/detailproductPage?productid=" + id) Brand Summary
                    a.pagebody_controlpanel_item.selected_item(href="/detailproductPage_Accreditation?productid=" + id) Accreditation
                    a.pagebody_controlpanel_item(href="/detailproductPage_Store?productid=" + id) Store
                div(class="pagebody_mainbody__infodisplay")
                    input.pagebody_mainbody__infodisplay__searchinput(type="search", placeholder ="Please enter the Accreditation . . .")
                    div.pagebody_mainbody_infodisplay__searchsubmitbutton Search
                    div.pagebody_mainbody_infodisplay__deletebutton
                        label.deletebutton_button.deletebutton_selectall.button Select All
                            input.button_selectall(type='checkbox')
                            span.checkmark
                        - var id = brandid
                        div.deletebutton_button.deletebutton_deletemarked(value=id)
                            svg(xmlns="http://www.w3.org/2000/svg",width="24",height="24",viewBox = "0 0 24 24")
                                path(d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z")

                    div.pagebody_mainbody_infodisplay_Accreditationlist
                        table.accreditationlist_table
                            thead
                                tr(role="row")
                                    th.accreditationlist_table__item Accreditation
                                    th.accreditationlist_table__item Rating
                                    th.accreditationlist_table__item
                            tfoot
                                tr(role="row")
                                    th.accreditationlist_table__item Accreditation
                                    th.accreditationlist_table__item Rating
                                    th.accreditationlist_table__item
                            tbody
                                - for (var i =0 ; i < accreditation.length ; i++)
                                    tr.accreditationlist_table_tablerow(role="row")
                                        - var id = brandid;
                                        td.accreditationlist_table__item.accreditationlist_table__Accreditation #{accreditation[i].Accreditation}
                                        td.accreditationlist_table__item.accreditationlist_table__Accreditation #{accreditation[i].Rating}
                                        td.accreditationlist_table__item.accreditationlist_table__Accreditation
                                            label.button
                                                - var accrid = accreditation[i]._id
                                                input.accreditationlist_table__Delete(value = accrid, type='checkbox')
                                                span.checkmark

    div(class="feature_page_footer")
        div(class="bottom_copyright")
            p &copy; 2019 IT Capstone Project - KinderFoodFinder. All rights reserved | Design by Team 2 - COMP5703