<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_store"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9">

            <TextView
                android:id="@+id/brand_name"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Brand Name: Pandani Select"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/category"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Category: Pork"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/accreditation"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Accreditation: RSPCA Approved Outdoor Free Range"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/rating"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Rating: Best"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/location"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Location: Available in TAS"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"/>


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>