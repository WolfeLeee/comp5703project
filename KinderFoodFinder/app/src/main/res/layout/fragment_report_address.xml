<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="50dp"
    android:background="@color/lighterOrange"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp">
        <TextView
            android:id="@+id/tv_product"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Product :"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
                android:id="@+id/content_product"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toEndOf="@+id/tv_product"
                android:layout_toRightOf="@+id/tv_product"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_product"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Brand :"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
                android:id="@+id/content_brand"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/content_product"
                android:layout_toEndOf="@+id/tv_brand"
                android:layout_toRightOf="@+id/tv_brand"
                android:gravity="center_vertical"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/tv_store"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_brand"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Store :"
                android:textSize="20sp"
                android:textStyle="bold" />

        <EditText
                android:id="@+id/input_store"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/content_brand"
                android:layout_toEndOf="@+id/tv_store"
                android:layout_toRightOf="@+id/tv_store"
                android:hint="Store Name"
                android:inputType="text" />

        <EditText
            android:id="@+id/input_location"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/input_store"
            android:layout_toEndOf="@+id/tv_location"
            android:layout_toRightOf="@+id/tv_location"
            android:hint="Detailed Address"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_store"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Address :"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
                android:id="@+id/tv_state"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_location"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="State :"
                android:textSize="20sp"
                android:textStyle="bold" />

        <EditText
                android:id="@+id/input_state"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/input_location"
                android:layout_toEndOf="@+id/tv_location"
                android:layout_toRightOf="@+id/tv_state"
                android:hint="State"
                android:inputType="text" />

        <TextView
                android:id="@+id/tv_postcode"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_state"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="PostCode :"
                android:textSize="20sp"
                android:textStyle="bold" />

        <EditText
                android:id="@+id/input_postcode"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_state"
                android:layout_toEndOf="@+id/tv_location"
                android:layout_toRightOf="@+id/tv_postcode"
                android:hint="PostCode"
                android:inputType="text" />

        <Button
                android:id="@+id/btn_submit"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv_postcode"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/button_style"
                android:text="SUBMIT"
                android:textSize="20sp" />
    </RelativeLayout>


</LinearLayout>